# TGDrive Environment Variables Template
# Copy this file to .env and fill in your actual values

# Required Variables

# Get from https://my.telegram.org/auth
API_ID=123456
API_HASH=your_api_hash_here

# Bot tokens from @BotFather (comma-separated for multiple bots)
BOT_TOKENS=1234567890:ABCdefGHIjklMNOpqrSTUvwxYZ

# Storage channel ID (must be negative, get from @userinfobot)
STORAGE_CHANNEL=-1001234567890

# Message ID of any file in storage channel for database backup
DATABASE_BACKUP_MSG_ID=123

# Optional Variables

# Password for web admin panel
ADMIN_PASSWORD=admin

# Premium account sessions for large files (comma-separated)
STRING_SESSIONS=

# API rate limiting delay (seconds)
SLEEP_THRESHOLD=60

# Database backup frequency (seconds)
DATABASE_BACKUP_TIME=60

# Website URL for keep-alive pings
WEBSITE_URL=

# Bot Mode - Upload files via Telegram bot
MAIN_BOT_TOKEN=
TELEGRAM_ADMIN_IDS=